{% extends 'layouts/cms.twig' %}

{% block title %}Просмотр публикации{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="main row mb-3">
        <div class="col-sm-12 border rounded shadow-sm">
            <div class="content-cover">
                <p class="title">Просмотр публикации</p>

                {% include "components/status.twig" %}

                <p class="subtitle-lite">Отображение на новостной ленте</p>

                <div class="ml-0 mr-0 mb-5 row">
                    <div class="col-sm-12 border rounded shadow pt-4 pb-4 pl-5 pr-5">
                        
                        <div class="card w-100 events-card mb-0">
                            <div class="row no-gutters">

                                <div class="col-md-4 events-card-img-cover">
                                    <img src="/public_html/upload/image/news/{{ preview_image }}" class="card-img events-card-img shadow" alt="...">
                                </div>
                                
                                <div class="col-md-8">
                                    <div class="card-body event-card-body">
                                        <p class="content-title">
                                            {{ news_title }}
                                        </p>
                                        <p class="content-subtitle">
                                            {{ publication_date }}
                                        </p>
                                        <p class="text">
                                            {{ preview_text }}
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <p class="subtitle-lite">Отображение основной статьи</p>

                <div class="ml-0 mr-0 mb-5 row">
                    <div class="col-sm-12 border rounded shadow pt-4 pb-4 pl-5 pr-5">
                        <p class="title">
                            {{ news_title }}
                        <p>
                        <p class="date">
                            {{ publication_date }}
                        </p>
                        <div class="text">
                            {{ content | raw}}
                        </div>
                    </div>
                </div>

                <a class="btn btn-outline-success" href="{{ url_for('cms.news.create') }}" role="button">Создать публикацию</a>
                <a class="btn btn-mustard" href="{{ url_for('cms.news.edit', { 'id': id }) }}" role="button">Редактировать</a>
                <a class="btn btn-outline-danger" href="" role="button">Удалить</a>
                
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}