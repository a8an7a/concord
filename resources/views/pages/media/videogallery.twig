{% extends 'layouts/app.twig' %}

{% block title %}Видеогалерея{% endblock %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="/public_html/css/plyr/plyr.css">

    <style>
        .modal-content {
            border: none;
            background-color: transparent; }
    </style>
{% endblock %}

{% block content %}
    <div class="main row mb-3">
        <div class="videogallery col-sm-12 border rounded shadow-sm">
            <div class="content-cover">
                <p class="title">Видеогалерея</p>

                <div class="video">
                    <div class="card w-100 video-card">
                        <div class="row no-gutters">
                            <div class="col-md-4 video-card-img-cover">
                                <img src="https://bit.ly/34EJxbF" class="card-img video-card-img shadow" alt="..." data-toggle="modal" data-target=".modal-video">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body event-card-body">
                                    <a class="content-title" href="" data-toggle="modal" data-target=".modal-video">
                                        Заголовок к видео
                                    </a>
                                    <p class="content-subtitle">
                                        Дата публикации
                                    </p>
                                    <p class="text">
                                        Описание видео
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card w-100 video-card">
                        <div class="row no-gutters">
                            <div class="col-md-4 video-card-img-cover">
                                <img src="https://bit.ly/2XEI4Rc" class="card-img video-card-img shadow" alt="..." data-toggle="modal" data-target=".modal-video">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body event-card-body">
                                    <a class="content-title" href="#" data-toggle="modal" data-target=".modal-video">
                                        Избрание Центрального Совета Организации
                                    </a>
                                    <p class="content-subtitle">
                                        12:00 23 сентября 2017
                                    </p>
                                    <p class="text">
                                        Жданов В.А. предложил определить общую численность челнов Центрального Совета 
                                        Организации - 15 человек. Также он предложил избрать Центральный Совет 
                                        Организации сроком на пять лет в следующем составе...
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card w-100 video-card">
                        <div class="row no-gutters">
                            <div class="col-md-4 video-card-img-cover">
                                <img src="https://bit.ly/2XCccMR" class="card-img video-card-img shadow" alt="..." data-toggle="modal" data-target=".modal-video">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body event-card-body">
                                    <a class="content-title" href="#" data-toggle="modal" data-target=".modal-video">
                                        Создание МОО «Содружество военных автомобилистов»
                                    </a>
                                    <p class="content-subtitle">
                                        11:00 23 сентября 2017
                                    </p>
                                    <p class="text">
                                        Чиняков Ю.В., выступавший на собрании учредителей, высказался о назревшей 
                                        необходимости объединения военных автомобилистов и предложил создать 
                                        Межрегиональную общественную организацию «Содружество военных автомобилистов».
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade modal-video" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <video poster="https://bit.ly/2VbsLgV" class="player" playsinline controls>
                                    <source src="/public_html/upload/video/video.mp4" type="video/mp4">
                                </video>
                            </div>
                        </div>
                    </div>

                    <nav class="pagination-cover" aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/public_html/js/plyr/plyr.polyfilled.js"></script>

    <!-- JavaScript Initialising -->
    <script type="text/javascript">
        const players = Plyr.setup('.player');
    </script>
{% endblock %}